<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
  	<constant name="struts.enable.DynamicMethodInvocation" value="false"/>
  	<constant name="struts.devMode" value="true"/>
      
   
	<include file="example.xml"/>
	
	<package name="default" extends="struts-default">
						
		<interceptors>
    		<interceptor name="login" class="org.arQam.AnnonceEfficace.Interceptors.LoginInterceptor"/>    	
		</interceptors>
      	
      	<default-action-ref name="acceuil" />
		
		<global-results>
   			<result name="connexionPage">/connexion.jsp</result>
		</global-results>
			            
    	<action name="acceuil" class="com.opensymphony.xwork2.ActionSupport">    		
      		<result name="success">/index.jsp</result>      		
    	</action>
    	
    	<action name="login" class="org.arQam.AnnonceEfficace.Utilisateur.LoginAction">
    		<result name="input">/connexion.jsp</result>
      		<result name="success" type="redirect">/espaceUtilisateur</result>      		
    	</action>
    	<action name="createcompte" class="org.arQam.AnnonceEfficace.Utilisateur.CreateCompteAction">
    		<result name="input">/creerCompte.jsp</result>
      		<result name="success" >/listeAnnonces.jsp</result>      		
    	</action>
    	
    	<action name="creerCompte" class="com.opensymphony.xwork2.ActionSupport">    		
      		<result name="success">/creerCompte.jsp</result>      		
    	</action>    	    	
    	
    	<action name="disconnect" class="org.arQam.AnnonceEfficace.Utilisateur.DisconnectAction">    		
      		<result name="success" type="redirect">/listeAnnonces</result>      		
    	</action>
    	<action name="espaceUtilisateur" class="com.opensymphony.xwork2.ActionSupport">
    		<interceptor-ref name="login" />  	            
    		<result name="success">/espaceUtilisateur.jsp</result>
    	</action>
    	<action name="listeAnnonces" class="com.opensymphony.xwork2.ActionSupport">
    		<!-- <interceptor-ref name="login" />  -->  	            
    		<result name="success">/listeAnnonces.jsp</result>
    	</action>    	
    	
    	
    	<action name="publierAnnonce" class="com.opensymphony.xwork2.ActionSupport">    		
      		<result name="success">/publierAnnonce.jsp</result>      		
    	</action>
	</package>	
	
	<package name="welcomePage" extends="struts-default">   
    	<!-- <action name="*" class="com.opensymphony.xwork2.ActionSupport">
      		<result>/index.jsp</result>
    	</action> -->            
  	</package>
  	
  	<package name="utilisateur" extends="struts-default">
	  
  	</package>
      
</struts>
